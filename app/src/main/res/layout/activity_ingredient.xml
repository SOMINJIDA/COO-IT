<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngredientActivity"
    android:background="#FFFDF5"
    android:backgroundTint="#FFFDF5">

    <ImageView
        android:id="@+id/ingredient_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/yellow_header"/>
    <ImageButton
        android:id="@+id/btn_ingredient_back"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/yellow_vector"
        android:background="@android:color/transparent"
        android:layout_marginTop="8dp"/>

    <ScrollView
        android:layout_below="@+id/ingredient_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ingredient_title"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="재료를 선택해주세요"
                android:textColor="#24434C"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/ingredient_veg"
                android:layout_below="@+id/ingredient_title"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="야채/과일"
                android:textColor="#24434C"
                android:textSize="20dp"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/btn_vegan_1"
                android:layout_below="@+id/ingredient_veg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="버섯">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="마늘">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="양파">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="두부">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_vegan_2"
                android:layout_below="@+id/btn_vegan_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="감자">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="양상추">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="블루베리">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="사과">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_vegan_3"
                android:layout_below="@+id/btn_vegan_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="딸">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="토마토">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="콩나물">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="당근">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_vegan_4"
                android:layout_below="@+id/btn_vegan_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="오이">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="고추">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="가지">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="호박">
                </Button>
            </LinearLayout>
            <TextView
                android:id="@+id/ingredient_meat"
                android:layout_below="@+id/btn_vegan_4"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="육류"
                android:textColor="#24434C"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/btn_meat_1"
                android:layout_below="@+id/ingredient_meat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="달걀">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="돼지고기">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="닭고기">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="소고기">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_meat_2"
                android:layout_below="@+id/btn_meat_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="양고기">
                </Button>
            </LinearLayout>
            <TextView
                android:id="@+id/ingredient_pro_food"
                android:layout_below="@+id/btn_meat_2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="가공식품"
                android:textColor="#24434C"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/btn_pro_food1"
                android:layout_below="@+id/ingredient_pro_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="참치캔">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="스팸">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="옥수수캔">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="소시지">
                </Button>
            </LinearLayout>
            <TextView
                android:id="@+id/ingredient_milk"
                android:layout_below="@+id/btn_pro_food1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="유제품"
                android:textColor="#24434C"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/btn_milk1"
                android:layout_below="@+id/ingredient_milk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="요거트">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="우유">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="치즈">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="버터">
                </Button>
            </LinearLayout>
            <TextView
                android:id="@+id/ingredient_fish"
                android:layout_below="@+id/btn_milk1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="해산물"
                android:textColor="#24434C"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:id="@+id/btn_fish1"
                android:layout_below="@+id/ingredient_fish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="새우">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="낙지">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="오징어">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="문어">
                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_fish2"
                android:layout_below="@+id/btn_fish1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="전복">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="꽃게">
                </Button>
                <Button
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#d1d0d1"
                    android:text="조개">
                </Button>
            </LinearLayout>
            <Button
                android:id="@+id/btn_ingredient_complete"
                android:layout_below="@+id/btn_fish2"
                android:layout_marginLeft="135dp"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:backgroundTint="#626d98"
                android:textStyle="bold"
                android:text="선택완료">
            </Button>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>