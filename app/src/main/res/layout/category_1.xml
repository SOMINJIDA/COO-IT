<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF5"
    tools:context=".Category1Activity">

    <ImageView
        android:id="@+id/category1_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/header" />
    <ImageButton
        android:id="@+id/btn_category_back"
        android:layout_width="13dp"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/backbutton" />
    <LinearLayout
        android:id="@+id/category1_btn_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/category1_header">
        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/zzzigae" />
        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_marginLeft="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/babb" />
        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_marginLeft="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/banchann" />
        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_marginLeft="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/husikk" />
    </LinearLayout>
    <ImageButton
        android:layout_below="@+id/category1_btn_collect"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/rectangle" />
    <ImageView
        android:layout_below="@+id/category1_btn_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/category_line" />

    <ImageView
        android:id="@+id/catefory_image"
        android:layout_width="200dp"
        android:layout_height="147dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/category_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="310dp"
        android:text="된장찌개"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="300dp"
        android:background="@android:color/transparent"
        android:src="@drawable/scrap_vector" />

    <ImageView
        android:id="@+id/catefory_image2"
        android:layout_width="200dp"
        android:layout_height="147dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/category_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="310dp"
        android:text="된장찌개"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="300dp"
        android:background="@android:color/transparent"
        android:src="@drawable/scrap_vector" />
</RelativeLayout>